#!/usr/bin/sh
source "$(dirname "$0")/../../libmain.sh"
source "$(dirname "$0")/../../libtarget.sh"

srcinfo="${configdir}/src/${name}/.SRCINFO"
exists "${srcinfo}"
pkgbase="$(sed -n "${srcinfo}" -e '/^pkgbase = /p' | sed -e 's:.*= ::')"
pkgver="$(sed -n "${srcinfo}" -e '/pkgver = /p' | sed -e 's:.*= ::')"
pkgrel="$(sed -n "${srcinfo}" -e '/pkgrel = /p' | sed -e 's:.*= ::')"

path="${configdir}/srctar/${pkgbase}-${pkgver}-${pkgrel}.src.tar.gz"
sum_file "${path}" || exit "$?"
