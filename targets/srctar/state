#!/usr/bin/sh
source "$(dirname "$0")/../../libmain.sh"
source "$(dirname "$0")/../../libtarget.sh"

srcinfo="${configdir}/src/${target}/.SRCINFO"
exists "${srcinfo}"
pkgbase="$(sed -n "${srcinfo}" -e '/^pkgbase = .*/p' 's:.*= ::')"
pkgver="$(sed -n "${srcinfo}" -e '/pkgver = .*/p' 's:.*= ::')"
pkgrel="$(sed -n "${srcinfo}" -e '/pkgrel = .*/p' 's:.*= ::')"

path="${configdir}/srctar/${pkgbase}-${pkgver}-${pkgrel}".src.tar.*
sum_file "${path}" || exit $?
